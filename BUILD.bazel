load("//:pipenv_lock.bzl", "pipenv_lock")
load("//:pyspark_rules.bzl", "pyspark_binary")
load("@python//3.11:defs.bzl", "compile_pip_requirements")
load("@rules_python//python:defs.bzl", "py_binary", "py_library")
