    name = "pipenv",
    pkg = "@pypi//pipenv",
    script = "pipenv",
    data = [
        ":requirements_lock_3_11.txt",
    ],
    deps = [
        "@pypi//virtualenv",
    ],
)

pipenv_lock(
    name = "pipfile_lock",
    requirements = ":requirements_lock_3_11.txt",
)

py_library(
    name = "pytest_helper",
    srcs = ["pytest_helper.py"],
)

pyspark_binary(
    name = "pyspark_hello_world_udf",
    srcs = ["pyspark_hello_world_udf.py"],
    deps = [
        "@pypi//pyspark",
    ],
)

